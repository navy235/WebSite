@model List<HttpLinkItem>

<div class="img-block">
    <ul class="clearfix">
        @if (Model.Count > 0)
        {
            for (var i = 0; i < 10; i++)
            {
                var item = Model[0];

                var colors = new string[] { "orgin", "red", "green", "blue" };
            <li>
                <div class="img-block-item @colors[i % colors.Length]">
                    <div class="pic">
                        <img src="@item.ImgUrl" alt="@item.Name" title="@item.Name">
                    </div>
                    <div class="description">
                        <div class="title">
                            <h4>@item.Name</h4>
                            <p>@item.ProvinceName - @item.CityName</p>
                            <p class="desc-text">@(item.Description.Length > 35 ? item.Description.Substring(0, 35) + "..." : item.Description) [<a href="@Url.Action("index", "shop", new { id = item.ID })" target="_blank">详细</a>]</p>
                            <p>
                                @(string.IsNullOrEmpty(item.Phone) ? "" : "电话：" + item.Phone)
                                <br />
                                @(string.IsNullOrEmpty(item.Mobile) ? "" : "手机：" + item.Mobile)
                            </p>
                        </div>
                    </div>
                    <a href="@Url.Action("index", "shop", new { id = item.ID })" target="_blank"></a>
                </div>
            </li>
            }
        }
    </ul>
</div>

