@model OutDoorSetAuctionCalendarViewModel
@{
    ViewBag.Title = "媒体档期设置";
    Layout = "~/Views/Shared/_LayoutPersonal.cshtml";
}
<article class="personal clearfix">
    <div class="personal-left">
        <div class="personal-nav">
            @Html.Partial("_PersonalLeftNav")
        </div>
    </div>
    <div class="personal-right">
        <div class="personal-right-body">
            <div class="personal-body-title clearfix">
                <h5>@ViewBag.Title</h5>
            </div>
            @ViewHelpers.Alert("友情提醒：",
                CookieHelper.NickName + ",请设置媒体不可售时间，如果需要删除某一段时间，请单击排期状态条上需要删除的时间段即可。", false, AlertType.info.ToString())

            @if (ViewBag.Error != null)
            { 
                @ViewHelpers.Alert("错误信息：",
                ViewBag.Error, false, AlertType.error.ToString())
            }

            <div class="personal-form  personal-form-setauction">
                <div class="form-field">
                    @Html.LabelFor(x => x.Name)
                    @Html.EditorFor(x => x.Name)
                </div>

                @Html.EditorFor(x => x.AuctionCalendar)

            </div>
        </div>

    </div>
</article>
