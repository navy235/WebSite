@model  CompanyReg
@{
    ViewBag.Title = "企业基本信息";
    Layout = "~/Views/Shared/_LayoutPersonal.cshtml";
}
<article class="personal clearfix">
    <div class="personal-left">
        <div class="personal-nav">
            @Html.Partial("_PersonalLeftNav")
        </div>
    </div>
    <div class="personal-right">
        <div class="personal-right-body">
            <div class="personal-body-title clearfix">
                <h5>@ViewBag.Title</h5>
            </div>
            @if (ViewBag.UserStatus < (int)MemberStatus.CompanyFailed)
            {
                @ViewHelpers.Alert("友情提醒：", CookieHelper.NickName + ",您还没有进行企业认证,立即请先进行企业认证.", Html.ActionLink("马上进行企业认证", "index", "company")
               , false, AlertType.info.ToString())
            }
            else if (ViewBag.UserStatus == (int)MemberStatus.CompanyFailed || ViewBag.UserStatus == (int)MemberStatus.CompanyApply)
            {
                @ViewHelpers.Alert("友情提醒：",
                CookieHelper.NickName + ",您的企业信息正在审核中。我们将尽快审核您的企业信息", false, AlertType.info.ToString())

                <div class="dispaly-container">
                    @Html.DisplayForModel()
                </div>
            }
            else if (ViewBag.UserStatus >= (int)MemberStatus.CompanyAuth)
            { 
            
                @ViewHelpers.Alert("友情提醒：",
                CookieHelper.NickName + ",您的企业信息认证成功！", false, AlertType.info.ToString())
                <div class="dispaly-container">
                    @Html.DisplayForModel()
                </div>
            }
        </div>

    </div>
</article>
