@model BizAuthModel
@{
    ViewBag.Title = "企业认证信息";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@section topscripts{
    @Styles.Render("~/Content/kendo/2012.3.1114/css")
    <script src="@Url.Content("~/Scripts/kendo/2012.3.1114/kendo.all.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo/2012.3.1114/kendo.aspnetmvc.min.js")"></script>
    <style type="text/css">
        .register .main {
            position: relative;
        }

        .register .content {
            width: 100%;
        }

            .register .content .n_form {
                width: 100%;
            }

        .n_form_step {
            padding-left: 40px;
            margin: 20px 0;
        }

        .form-field .text-box {
            width: 250px;
        }

        .form-field-city .k-dropdown {
            width: 125px;
        }

        .form-field-uploadlogo .img-box {
            display: inline-block;
            vertical-align: middle;
        }

            .form-field-uploadlogo .img-box img {
                width: 198px;
                height: 198px;
                border: 1px solid #bbb;
            }

        .form-field-uploadlogo .k-upload {
            margin-left: 133px;
        }

        .field-prompt-message {
            display: block;
            margin-left: 135px;
            color: #999;
        }

        .form-field textarea {
            font-size: 1em;
            height: 125px;
            padding-top: 5px;
        }

        .img-box-list {
            margin-left: 135px;
        }

        .item_r {
            top: 215px;
        }
    </style>
}


<div class="top-tips">
    <em class="top-tips-success"></em>
    <div>
        <span class="top-tips-title">
            <strong>恭喜</strong>，您已成功注册成为广知网企业会员，获得奖励 <em class="s_icon s_icon_money"></em><strong class="c_red">+1</strong> 个广知币</span>
    </div>
    <br>
</div>
<div class="register">
    <div class="main">
        <div class="sub">
            <h6>
                <span>完善认证信息</span></h6>
        </div>
        <div class="content">
            <div class="n_form ">


                <div class="clearfix n_form_step">
                    <ul class="form-step clearfix">
                        <li class="pass"><i></i><span>第一步：填写企业信息</span></li>
                        <li class="cur"><i></i><span>第二步：填写认证信息</span></li>
                        <li><i></i><span>第三步：邮箱验证</span></li>
                        <li><i></i><span>第四步：审核通过认证成功</span></li>
                    </ul>
                </div>

                <span class="c_gray ml60">完善下面信息，可以进行企业认证，认证成功后即可获得 <em class="s_icon s_icon_money"></em><strong class="c_red">+10</strong> 个广知币。
             
                     <a href="@Url.Action("activeemail")">跳过此步，需要的时候再填。</a></span>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.EditorForModel()
                    <div class="form-field form-field-submit c_gray">
                        <button type="submit" class="btn btn-success mr20">
                            填好了，提交认证信息</button><a href="@Url.Action("ActiveEmail")">跳过此步，需要的时候再填</a>
                    </div>
                }
            </div>
        </div>
        <div class="item_r c_gray">
            <h3>成功认证将获得：</h3>
            <ul class="dot_list ml10">
                <li>获得信誉值 <em class="s_icon s_icon_money"></em><strong class="c_red">+10</strong> ，<a href="@Url.Action("index", "help", new { id = 3 })">什么是信誉值?</a></li>
                <li>发布的信息将更靠前</li>
                <li>更多搜索收录</li>
                <li>发布的信息的条目更多</li>
                <li>更大的图片空间</li>
            </ul>
        </div>
        <div class="clearfix">
        </div>
    </div>
</div>
