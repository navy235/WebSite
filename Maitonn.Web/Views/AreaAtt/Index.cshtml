@{
    ViewBag.Title = "区域属性字典信息管理";
}

@(Html.Kendo().Grid<AreaAtt>()
    .Name("AreaAttList")
    .Columns(columns =>
    {

        columns.Bound(c => c.AttName);
        columns.Command(command => command.Destroy()).Title("删除").Width(120);
    })
    .ToolBar(toolbar =>
    {
        toolbar.Create();
        toolbar.Save();
    })
    .Editable(editable => editable.Mode(GridEditMode.InCell))
    .Pageable()
    .Sortable()
    .Scrollable()
    .Filterable()
    .DataSource(dataSource => dataSource
        .Ajax()
        .Batch(true)
        .PageSize(120)
        .Model(model => model.Id(c => c.ID))
        .Create("Editing_Create", "AreaAtt")
        .Read("Editing_Read", "AreaAtt")
        .Update("Editing_Update", "AreaAtt")
        .Destroy("Editing_Destroy", "AreaAtt")
    )
)